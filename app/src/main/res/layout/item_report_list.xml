<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="6dp"
    android:id="@+id/container"
    >
<ImageView
    android:id="@+id/logo"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:src="@drawable/beeline"
    android:padding="16dp"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/partnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HTextStyle"
            android:text="Beeline"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PTextStyle"
            android:text="May 20 2017 20:00:00"
            android:maxLines="1"
            android:textSize="15sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/summa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:maxLines="1"
        android:gravity="right"
        android:text="1000 000 sum"
        android:paddingRight="16dp"
        style="@style/HTextStyle"

        android:textColor="@color/successC"

        />
</LinearLayout>