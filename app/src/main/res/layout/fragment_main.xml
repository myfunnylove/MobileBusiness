<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/material_blue_grey_50" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/top_payments"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/topPaymentView"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/seeAllTopPayments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/see_all"
            android:theme="@style/SeeAllButtonMobile" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/material_blue_grey_50" />

        <TextView
            android:id="@+id/textView"
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/last_added"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lastAddedView"
            android:layout_width="match_parent"
            android:layout_height="110dp"

            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/seeAllLastAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/see_all"
            android:theme="@style/SeeAllButtonMobile"


            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/material_blue_grey_50" />

        <TextView
            style="@style/PrimaryTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/news"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/newsView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/seeAllNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/see_all"

            android:theme="@style/SeeAllButtonMobile"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/material_blue_grey_50" />
    </LinearLayout>
