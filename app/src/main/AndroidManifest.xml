<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nbu.mobile">

    <application
        android:allowBackup="true"
        android:name=".common.base.App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
            android:value="GlideModule" />
        <activity android:name=".common.ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".common.ui.activities.ChooseActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".mobile.ui.activities.MainMenuActivity"/>
        <activity android:name=".mobile.ui.activities.ReportDetailActivity"/>
    </application>

</manifest>